-- Создание таблицы Department
CREATE TABLE Department (
    ID INT PRIMARY KEY,
    NAME VARCHAR(50)
);

-- Наполнение таблицы Department
INSERT INTO Department (ID, NAME) VALUES (1, 'Backend');
INSERT INTO Department (ID, NAME) VALUES (2, 'DevOps');
INSERT INTO Department (ID, NAME) VALUES (3, 'Android');
INSERT INTO Department (ID, NAME) VALUES (4, 'iOS');

-- Создание таблицы Users
CREATE TABLE Users (
    ID INT PRIMARY KEY,
    SURNAME VARCHAR(50),
    DEPARTMENT_ID INT,
    SALARY INT,
    FOREIGN KEY (DEPARTMENT_ID) REFERENCES Department(ID)
);

